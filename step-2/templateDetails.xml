<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="2.5" type="template" client="site">
    <!-- template name is also used for directory name -->
	<name>step-2</name>

	<files>
	    <!-- folder tag loads everything in that folder -->
		<folder>img</folder>
		<!-- filename in a sub-directory will also create that directory -->
		<filename>css/screen.css</filename>
		<!-- filename tag loads only the specific file listed -->
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
	</files>

</extension>

